enum ActivityType {
  TASK // Tarea general
  MEETING // Reuni√≥n
  TRAINING // Formaci√≥n acad√©mica
  INTERNAL_CONSULT // Consultor√≠a interna
  CLIENT_CONSULT // Consultor√≠a a cliente
  PROJECT // Trabajo en proyecto
  SUPPORT // Soporte t√©cnico
  DEVELOPMENT // Desarrollo
  CONFERENCE // Conferencia
  ADMINISTRATIVE // Trabajo administrativo
  BREAK // Descanso/Pausa
  OTHER // Otro
}

enum WorkLogStatus {
  OPEN
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model WorkLog {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type        ActivityType
  title       String // T√≠tulo breve
  description String? // Descripci√≥n detallada (opcional)

  // Status and Progress
  status   WorkLogStatus @default(COMPLETED) // Default to COMPLETED for backward compatibility/timers
  progress Int           @default(100) // 0-100%

  // Department Context
  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id])

  // Tiempo
  startTime DateTime
  endTime   DateTime? // Null = en progreso
  duration  Int? // Minutos calculados (para consultas r√°pidas)

  // Metadata
  projectName String? // Nombre del proyecto (si aplica)
  clientName  String? // Nombre del cliente (si aplica)
  ticketId    String? // Relaci√≥n opcional con ticket
  ticket      Case?   @relation(fields: [ticketId], references: [id])

  // Tags para b√∫squeda
  tags String[] @default([])

  // Auditor√≠a
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([startTime])
  @@index([userId, startTime])
}
